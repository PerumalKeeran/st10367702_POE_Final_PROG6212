@model IEnumerable<st10367702_POE_Final_PROG6212.Models.Claim>

@{
    ViewData["Title"] = "Coordinator Dashboard";
    var currentFilter = ViewBag.StatusFilter as string ?? "All";
}

<h1 class="mb-4">Coordinator Dashboard</h1>

<p class="text-muted">
    First level of approval. Review all submitted claims and approve or reject them.
</p>

<div class="mb-3">
    <strong>Filter by overall status:</strong>
    <a asp-action="CoordinatorDashboard" asp-route-statusFilter="All"
       class="btn btn-sm @(currentFilter == "All" ? "btn-primary" : "btn-outline-primary")">All</a>
    <a asp-action="CoordinatorDashboard" asp-route-statusFilter="Pending"
       class="btn btn-sm @(currentFilter == "Pending" ? "btn-warning" : "btn-outline-warning")">Pending</a>
    <a asp-action="CoordinatorDashboard" asp-route-statusFilter="Pending Manager"
       class="btn btn-sm @(currentFilter == "Pending Manager" ? "btn-info" : "btn-outline-info")">Pending Manager</a>
    <a asp-action="CoordinatorDashboard" asp-route-statusFilter="Approved"
       class="btn btn-sm @(currentFilter == "Approved" ? "btn-success" : "btn-outline-success")">Approved</a>
    <a asp-action="CoordinatorDashboard" asp-route-statusFilter="Rejected"
       class="btn btn-sm @(currentFilter == "Rejected" ? "btn-danger" : "btn-outline-danger")">Rejected</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Year</th>
            <th>Hours</th>
            <th>Total Amount (R)</th>
            <th>Status</th>
            <th>Coordinator Approved</th>
            <th>Submitted</th>
            <th>Reviewed</th>
            <th>Actions</th>
            <th>Documents</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.ClaimId</td>
                <td>@c.LecturerName</td>
                <td>@c.Month</td>
                <td>@c.Year</td>
                <td>@c.HoursWorked</td>
                <td>@c.TotalAmount.ToString("0.00")</td>
                <td>@c.Status</td>
                <td>@(c.IsCoordinatorApproved ? "Yes" : "No")</td>
                <td>@c.SubmittedDate.ToString("yyyy-MM-dd")</td>
                <td>@(c.ReviewedDate.HasValue? c.ReviewedDate.Value.ToString("yyyy-MM-dd") : "-")</td>
                <td>
                    @if (!c.IsCoordinatorApproved && c.Status != "Rejected")
                    {
                        <form asp-action="ApproveCoordinator" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@c.ClaimId" />
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>

                        <form asp-action="RejectCoordinator" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@c.ClaimId" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">No actions</span>
                    }
                </td>
                <td>
                    @if (c.SupportingDocuments != null && c.SupportingDocuments.Any())
                    {
                        foreach (var doc in c.SupportingDocuments)
                        {
                            <a href="@doc.FilePath" target="_blank">@doc.FileName</a>
                
                            <br />
                        }
                    }
                    else
                    {
                        <span class="text-muted">No documents</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
